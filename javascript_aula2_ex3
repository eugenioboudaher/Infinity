  <script>
/*18,5 - 24,9: Peso normal
25,0 - 29,9: Sobrepeso
30,0 - 34,9: Obesidade grau 1
35,0 - 39,9: Obesidade grau 2 (severa)
40,0 ou mais: Obesidade grau 3 (m√≥rbida)*/

var weight = Number(prompt("Qual o seu peso?"))
var height = Number(prompt("Qual a ssua altura?"))
var imc = weight/ height**2

if (imc <= 24.9){
  alert('Peso normal')
} else if (imc <= 29.9){
  alert('Sobrepeso')
}else if(imc <=34.90){
  alert('Obesidade grau1')
}else if(imc <= 39.9){
  alert('Obesidade grau 2')
}else {
  alert('Obesidade grau 3')
}
  </script>
  
